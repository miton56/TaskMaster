<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editTareaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".EditarTarea">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Título -->
                <TextView
                    android:id="@+id/textViewTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar tarea"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Imagen -->
                <ImageView
                    android:id="@+id/imageViewTarea"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/lofigirl"
                    android:background="@drawable/rounded_image_bg"
                    android:clipToOutline="true"/>

                <!-- Categoría -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoría"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/spinnerCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginBottom="12dp"/>

                <!-- Prioridad -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prioridad"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

                <RatingBar
                    android:id="@+id/ratingBarPrioridad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_marginBottom="12dp"/>

                <!-- Nombre -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

                <EditText
                    android:id="@+id/editTextNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe el nombre de la tarea"
                    android:padding="10dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="12dp"/>

                <!-- Hora de inicio -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora de inicio"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

                <EditText
                    android:id="@+id/editTextHoraInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selecciona hora"
                    android:padding="10dp"
                    android:background="@drawable/edittext_bg"
                    android:focusable="false"
                    android:inputType="none"
                    android:layout_marginBottom="12dp"/>

                <!-- Hora de término -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora de término"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

                <EditText
                    android:id="@+id/editTextHoraTermino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selecciona hora"
                    android:padding="10dp"
                    android:background="@drawable/edittext_bg"
                    android:focusable="false"
                    android:inputType="none"
                    android:layout_marginBottom="12dp"/>

                <!-- Fecha -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

                <EditText
                    android:id="@+id/editTextFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selecciona fecha"
                    android:padding="10dp"
                    android:background="@drawable/edittext_bg"
                    android:focusable="false"
                    android:inputType="none"
                    android:layout_marginBottom="16dp"/>

                <!-- CheckBox de terminada -->
                <CheckBox
                    android:id="@+id/checkBoxTerminada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarea terminada"
                    android:layout_marginBottom="12dp"/>

                <!-- Estado de la tarea -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado de la tarea"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginBottom="4dp"/>

                <RadioGroup
                    android:id="@+id/radioGroupEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/radioPorHacer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Por hacer"/>

                    <RadioButton
                        android:id="@+id/radioEnProgreso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En progreso"/>

                    <RadioButton
                        android:id="@+id/radioCompletada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completada"/>
                </RadioGroup>

                <!-- ProgressBar -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Progreso de la tarea"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginBottom="4dp"/>

                <ProgressBar
                    android:id="@+id/progressBarTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="50"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginBottom="16dp"/>

                <!-- Botón para guardar cambios -->
                <Button
                    android:id="@+id/btnGuardarCambios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar cambios"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
